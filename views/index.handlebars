<div class="container" style="text-align: -webkit-center;">

	<h1>Eat-Da-Burger App</h1>

	<div class="row">
		<div class="col-sm-12 col-md-6" style="text-align: -webkit-center;">

			<h2 class="">Burgers Available To Eat!</h2>

			<ul style="padding: 0;">
				{{#each burgers}}
				{{#unless this.devoured}}
				{{/unless}}
				<li class="d-flex">
					<form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST" style="width: 100%;">
						<div class="mr-auto p-2">
							{{this.id}}
							{{this.burger_name}}
							<input type="hidden" name="devoured" value="true">
						</div>
						<div class="p-2">
							<button class="btn btn-outline-danger" type="submit">Devour It!</button>
						</div>
					</form>
				</li>
				{{/each}}
			</ul>
		</div>

		<div class="col-sm-12 col-md-6 mx-auto text-center">

			<h2>Burgers That Have Been Eaten!</h2>

			<ul>
				{{#each burgers}}
				{{#if this.devoured}}
				<li class="e">
					{{this.id}}
					{{this.burger_name}}
				</li>
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
	<!-- end .row -->

	<div class="row" style="text-align: -webkit-center;">
		<div class="px-3 py-3 mx-auto text-center">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST" style="padding: 20px;">

				<div class="form-group">
					<p>Enter a burger you want to order and click the Submit Order button.</p>
					<div class="form-text">
						<input type="text" id="ca" name="burger_name">
					</div>
				</div>

				<button class="btn btn-outline-danger" type="submit">Submit Order</button>
			</form>

		</div>
	</div>